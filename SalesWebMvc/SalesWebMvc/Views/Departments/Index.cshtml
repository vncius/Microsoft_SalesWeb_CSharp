@model IEnumerable<SalesWebMvc.Models.Department>

@using SalesWebMvc.Models.Enums

<h2>@ViewData["Title"]</h2>

<p>
    @Html.ActionLink(
        "Create New",
        "_viewAcoes",
        new { acao = StatusAcoes.CREATE },
        new { @class = "btn btn-primary" }
    )
</p>
<table class="table table-hover table-striped" style="text-align:center">
    <thead class="bg-dark" style="color:azure">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @*<input type="button" value="Edit" data-value="@item.Id" class="btn btn-primary btn-edit" />
        <input type="button" value="Delete" data-value="@item.Id" class="btn btn-primary btn-delete" />
        <input type="button" value="Details" data-value="@item.Id" class="btn btn-primary btn-details" />*@

                    @Html.ActionLink(
                              "edit",
                              "_viewAcoes",
                              new { id = @item.Id, acao = StatusAcoes.EDIT },
                              new { @class = "btn btn-primary material-icons" }
                          )

                    @Html.ActionLink(
                        "delete_forever",
                        "_viewAcoes",
                        new { id = @item.Id, acao = StatusAcoes.DELETE },
                        new { @class = "btn btn-primary material-icons" }
                    )

                    @Html.ActionLink(
                        "visibility",
                        "_viewAcoes",
                        new { id = @item.Id, acao = StatusAcoes.DETAILS },
                        new { @class = "btn btn-primary material-icons" }
                    )
                </td>
            </tr>
        }
    </tbody>
</table>

